// Utilidad: ¿tiene al menos un link?
const hasLinks = (links) => Boolean(links?.repo || links?.demo);
---

<section class="proyectos-destacados" id="proyectos">
  <h2 class="titulo">Proyectos Destacados</h2>

  <div class="grid-proyectos">
    {projects.map((p) => (
      <article class="proyecto-card" data-type={p.type}>
        <header class="proyecto-header">
          <h3 class="proyecto-titulo">
            {p.emoji} <strong>{p.title}</strong>
          </h3>
          <span class="badge" aria-label={`Tipo: ${p.type}`}>{p.type}</span>
        </header>

        <p class="proyecto-desc">{p.description}</p>

        <ul class="tags" aria-label="Tecnologías">
          {p.tags.map((t) => <li class="tag">{t}</li>)}
        </ul>

        {hasLinks(p.links) && (
          <div class="proyecto-links">
            {p.links.repo && (
              <a
                class="btn-link"
                href={p.links.repo}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Repositorio de ${p.title} en GitHub`}
              >
                <img src="/icons/github.svg" alt="" /> Repo
              </a>
            )}
            {p.links.demo && (
              <a
                class="btn-link"
                href={p.links.demo}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Demo en vivo de ${p.title}`}
              >
                <img src="/icons/external.svg" alt="" /> Demo
              </a>
            )}
          </div>
        )}
      </article>
    ))}
  </div>
</section>

