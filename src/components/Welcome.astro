// Mapa de categorías para renderizar cuadros automáticamente
const techCategories = [
  { key: 'frontend', title: 'Frontend' },
  { key: 'backend', title: 'Backend' },
  { key: 'database', title: 'Bases de datos' },
  { key: 'cloud', title: 'Cloud & DevOps' },
